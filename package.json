{
  "name": "drizzle-gateway-vscode",
  "displayName": "Drizzle Gateway VSCode",
  "description": "Run Drizzle Gateway directly from VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "properties": {
      "drizzleGateway.binaryPath": {
        "type": "string",
        "default": "",
        "description": "Path to the binary. Leave empty to auto-download."
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "drizzle-gateway-explorer",
          "title": "Drizzle Gateway",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "drizzle-gateway-explorer": [
        {
          "id": "drizzleGatewayView",
          "name": "Controls",
          "icon": "$(server)"
        }
      ]
    },
    "view/title": [
      {
        "command": "drizzleGateway.updateBinary",
        "when": "view == drizzleGatewayView",
        "group": "navigation"
      }
    ],
    "commands": [
      {
        "command": "drizzleGateway.start",
        "title": "Drizzle Gateway: Start"
      },
      {
        "command": "drizzleGateway.stop",
        "title": "Drizzle Gateway: Stop"
      }
    ],
    "configuration": {
      "title": "Drizzle Gateway",
      "properties": {
        "drizzleGateway.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the Drizzle Gateway binary executable."
        },
        "drizzleGateway.databaseUrl": {
          "type": "string",
          "default": "",
          "description": "The connection string for your database (DATABASE_URL)."
        },
        "drizzleGateway.port": {
          "type": "number",
          "default": 4983,
          "description": "Port to run the Drizzle Gateway on."
        },
        "drizzleGateway.password": {
          "type": "string",
          "default": "",
          "description": "Master password for the Gateway (MASTERPASS)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
